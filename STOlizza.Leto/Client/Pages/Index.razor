                    <div style="background-color: white; height: 107px" />
                    <MudButton Class="align-self-center justify-content-center" Style=@($"margin-top: -65px; text-align: center;height: 160px; width: 160px; border-radius: 50%; background-color: {@sm.color};")>
                        <MudText Style="position:relative; top:34%; font-family: 'Unbounded'; font-style: normal; font-weight: 400; font-size: 18px; line-height: 115%; text-align: center; letter-spacing: 2px; text-transform: uppercase; color: white;">ПОДАТЬ <br />ЗАЯВКУ</MudText>

                    </MudButton>
                </MudItem>
